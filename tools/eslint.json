{
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
  },
  "plugins": [
  ],
  /*
	0 - turn the rule off
	1 - turn the rule on as a warning (doesn't affect exit code)
	2 - turn the rule on as an error (exit code is 1 when triggered)
  */
  "rules": {
    "block-scoped-var": 0,
    "brace-style": ["2", "stroustrup"],
    "camelcase": 1,
    "comma-style": [2, "last"],
    "consistent-this": [2, "self"],
    "default-case": 2, 
    //"func-names":1, 
    "func-style": [2, "declaration"],
    "guard-for-in": 2,
    "no-extra-parens": 1,
    "no-lonely-if": 2,
    "no-nested-ternary": 2,
    "no-self-compare": 1,
    "no-underscore-dangle": 0,  // MongoDB uses _id
    "no-unused-expressions": 1,
    "no-unused-vars": [2, "local"],
    "no-use-before-define": [2, "nofunc"],
    "quotes": [2, "single"],
    "radix": 2,
    "semi": [2, "always"],
    "space-after-keywords": [2, "always"],
    "strict": 2,
    "use-isnan": 2,
    "valid-jsdoc": [1, {
      "requireParamDescription": true,
      "requireReturn": true,
      "prefer": {
        "return": "returns"
      }
    }],
    "valid-typeof": 2,
    "wrap-iife": [2, "inside"],
    "wrap-regex": 1
  }
}